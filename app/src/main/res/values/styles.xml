<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialogStyle</item>

    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#4aa0fd</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light">

        <!--ボタンON時のボタンの通り道（透明度30%）・ボタンとタッチフィードバックカラー-->
        <item name="colorControlActivated">#ff0000</item>

        <!--ボタンOFF時のボタンの通り道（透明度30%）-->
        <item name="android:colorForeground">#0000ff</item>

        <!-- OFFボタンを押したときのタッチフィードバックカラー -->
        <item name="colorControlHighlight">#ffff00</item>

    </style>

</resources>
